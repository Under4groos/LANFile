<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LANFile.ViewModels"
             xmlns:controls="clr-namespace:LANFile.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LANFile.Views.MainView"
             Background="#1e1e1e"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto,*">
        <Border Grid.Column="0">
            <Grid>
                <Border Classes="VerticalM1 BorderM1">
                    <Grid>
                        <ScrollViewer>
                            <StackPanel>
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe700;" />
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe701;" />
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe705;" />
                            </StackPanel>
                        </ScrollViewer>
                        <ScrollViewer VerticalAlignment="Bottom">
                            <StackPanel>
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe713;" />

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Margin="0,5,5,5">
            <Grid RowDefinitions="*,Auto">
                <Border Grid.Row="0" Classes="BorderM1" Margin="0,0,0,4">
                    <Grid>
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding  Devices}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>
                                            <VirtualizingStackPanel HorizontalAlignment="Stretch"
                                                                    Orientation="Vertical" />
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <controls:LanDevice Theme="{StaticResource LanDevice}" 
                                                                ConnectName="{Binding Name}"
                                                                Os="{Binding Os}"
                                                                Port="{Binding Port}"
                                                                Host="{Binding Host}"
                                                                />
                                           
                                        </Grid>

                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </Grid>
                </Border>
                <Border Grid.Row="1" VerticalAlignment="Bottom" Classes="BorderM1">
                    <Grid>
                        <WrapPanel VerticalAlignment="Top">
                            <Button
                                MinHeight="30" MinWidth="30"
                                Classes="SegoeFluent"
                                Content="&#xe72c;" />
                            <Button
                                Click="Button_OnClick"
                                Classes="Base"
                                Content="Connect" />
                            <Button
                                Classes="Base"
                                Content="Close connect" />
                            <Button
                                Classes="Base"
                                Content="Send string" />

                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </Grid>

</UserControl>