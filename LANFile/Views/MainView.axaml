<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LANFile.ViewModels"
             xmlns:controls="clr-namespace:LANFile.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LANFile.Views.MainView"
             Background="#1e1e1e"
             x:DataType="vm:MainViewModel">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto,*">
        <Border Grid.Column="0">
            <Grid>
                <Border Classes="VerticalM1 BorderM1">
                    <Grid>
                        <ScrollViewer>
                            <StackPanel>
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe700;" />
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe701;" />
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe705;" />
                            </StackPanel>
                        </ScrollViewer>
                        <ScrollViewer VerticalAlignment="Bottom">
                            <StackPanel>
                                <Button
                                    Classes="SegoeFluent Min40"
                                    Content="&#xe713;" />

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Margin="0,5,5,5">
            <Grid RowDefinitions="*,Auto">
                <Border Grid.Row="0" Classes="BorderM1" Margin="0,0,0,4">
                    <Grid RowDefinitions="Auto,*">
                        <Grid Grid.Row="0">
                           <Border Margin="4" Classes="BorderM1">
                               <WrapPanel Margin="8" Orientation="Horizontal">
                                   <TextBlock Classes="F14L" 
                                              Text="Name:" Padding="0">
                                   </TextBlock>
                                   <TextBlock Classes="F14L" Padding="4,0,0,0" Foreground="#ff0a67"   Text="{Binding Title }"></TextBlock>
                               </WrapPanel>
                           </Border>
                        </Grid>

                        <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Row="1">

                            <ItemsControl ItemsSource="{Binding  Devices}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel>
                                            <VirtualizingStackPanel Orientation="Vertical" />

                                        </StackPanel>

                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>

                                        <controls:LanDevice Theme="{StaticResource LanDevice}"
                                                            ConnectName="{Binding Name}"
                                                            Os="{Binding Os}"
                                                            Port="{Binding Port}"
                                                            Host="{Binding Host}" />


                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </ScrollViewer>


                    </Grid>
                </Border>
                <Border Grid.Row="1" Classes="BorderM1">
                    <Grid>
                        <WrapPanel VerticalAlignment="Top">
                            <Button
                                Click="ButtonClickRefresh"
                                MinHeight="30" MinWidth="30"
                                Classes="SegoeFluent"
                                Content="&#xe72c;" />
                            <Button
                                Click="ButtonClickDispose"
                                Classes="Base"
                                Content="DisposeAll" />
                            <Button
                                Click="ButtonClickBeacon"
                                Classes="Base"
                                Content="Start Beacon" />
                            <Button
                                Click="ButtonClickFindDevice"
                                Classes="Base"
                                Content="Find device" />


                            <Button
                                Click="ButtonClickRandom"
                                Classes="Base"
                                Content="Random" />
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

    </Grid>

</UserControl>